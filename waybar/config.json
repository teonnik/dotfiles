{
    "layer": "top",        
    "position": "top",  
    "height": 30,          

    "modules-left": [ "memory", "cpu", "temperature",  "battery", "network"],
    "modules-center": [ "sway/workspaces",  "sway/mode" ],
    "modules-right": [ "custom/layout", "idle_inhibitor", "backlight", "pulseaudio",  "clock#date", "clock#time" ],

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "clock#date": {
        "format": " {:%Y-%m-%d}"
    },
    "clock#time": {
        "format": " {:%H:%M}   "
    },
    "cpu": {
        "format": " {usage}",
        "tooltip": false
    },
    "memory": {
      "format": " {used:0.1f}Gb"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}",
        "format-icons": ["", "", ""]
    },
    "backlight": {
        "format": "{icon} {percent}",
        "format-icons": ""
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}",
        "format-charging": " {capacity}",
        "format-plugged": " {capacity}",
        "format-alt": "{icon} {time}",
        "format-icons": ["", "", "", "", ""]
    },
    "network": {
        "format-wifi": " {essid}",
        "format-ethernet": " {ifname}: {ipaddr}/{cidr}",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": "⚠ Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}",
        "format-bluetooth": "{icon} {volume}",
        "format-bluetooth-muted": " {icon}",
        "format-muted": "",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio#mic": {
        "format-source": " {volume}",
        "format-source-muted": ""
    },
    "custom/layout": {
        "format": " {}",
        "exec": "~/.config/waybar/modules/kblayout '1:1:AT_Translated_Set_2_keyboard'",
        "tooltip": false
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    }
}
